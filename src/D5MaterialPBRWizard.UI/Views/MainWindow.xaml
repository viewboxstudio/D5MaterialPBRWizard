<Window x:Class="D5MaterialPBRWizard.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="D5 Material PBR Wizard" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="ðŸŽ¨ D5 Material PBR Wizard" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="White" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="FolderPathText" Grid.Column="0" Text="No seleccionada" VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="ðŸ“ Seleccionar" Padding="10" Margin="10,0" Click="SelectFolder_Click"/>
                <Button Grid.Column="2" Content="ðŸ” Escanear" Padding="10" Click="ScanFolder_Click"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="White" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Materiales encontrados:" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="MaterialCountText" Grid.Row="0" Text=" (0)" Margin="150,0,0,10"/>
                <ListView Grid.Row="1" x:Name="MaterialsListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="{Binding StatusIcon}" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding BaseName}" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding MapCount}" Margin="0,0,5,0"/>
                                <TextBlock Text="mapas"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <Button Grid.Row="3" Content="ðŸš€ Generar Materiales" HorizontalAlignment="Right" Padding="15,8" Margin="0,15,0,0" Click="GenerateMaterials_Click"/>
    </Grid>
</Window>
